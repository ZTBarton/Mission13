@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>

    @if (ViewBag.FilterId != 0)
    {
        <h1>Bowlers - Team: @ViewBag.FilterName</h1>
    }
    else
    {
        <h1>All Bowlers</h1>
    }

<br />

<div style="display:flex; flex-direction:row;">
    <div style="justify-self:flex-start">
        <h5>Filter:</h5>
        <a style="margin-bottom:1rem;" class="btn btn-primary" asp-controller="Home" asp-action="Index" asp-route-teamId="0">All Teams</a><br />
        @foreach (var t in ViewBag.Teams)
        {
            <a style="margin-bottom:1rem;" class="btn btn-primary" asp-controller="Home" asp-action="Index" asp-route-teamId="@t.TeamID">@t.TeamName</a><br />
        }
    </div>
    <table class="table table-sm table-striped table-bordered" style="justify-self:center; height:fit-content;">
        <thead class="font-weight-bold">
            <tr>
                <td>First Name</td>
                <td>Middle Initial</td>
                <td>Last Name</td>
                <td>Address</td>
                <td>City</td>
                <td>State</td>
                <td>Zip</td>
                <td>Phone #</td>
                <td></td>
                <td></td>
            </tr>
        </thead>

        <tbody>
            @foreach (var b in Model)
            {
                <tr>
                    <td>@b.BowlerFirstName</td>
                    <td>@b.BowlerMiddleInit</td>
                    <td>@b.BowlerLastName</td>
                    <td>@b.BowlerAddress</td>
                    <td>@b.BowlerCity</td>
                    <td>@b.BowlerState</td>
                    <td>@b.BowlerZip</td>
                    <td>@b.BowlerPhoneNumber</td>
                    <td><a class="btn btn-primary" asp-action="EditBowler" asp-route-id="@b.BowlerID">Edit</a></td>
                    <td><a class="btn btn-warning" asp-action="DeleteBowler" asp-route-id="@b.BowlerID">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>



