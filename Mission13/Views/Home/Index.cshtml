@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>

<h1>Bowlers</h1>

<table class="table table-sm table-striped table-bordered">
    <thead class="font-weight-bold">
        <tr>
            <td>First Name</td>
            <td>Middle Initial</td>
            <td>Last Name</td>
            <td>Address</td>
            <td>City</td>
            <td>State</td>
            <td>Zip</td>
            <td>Phone #</td>
            <td></td>
            <td></td>
        </tr>
    </thead>

    <tbody>
        @foreach (var b in Model)
        {
        <tr>
            <td>@b.BowlerFirstName</td>
            <td>@b.BowlerMiddleInit</td>
            <td>@b.BowlerLastName</td>
            <td>@b.BowlerAddress</td>
            <td>@b.BowlerCity</td>
            <td>@b.BowlerState</td>
            <td>@b.BowlerZip</td>
            <td>@b.BowlerPhoneNumber</td>
            <td><a class="btn btn-primary" asp-action="EditBowler" asp-route-id="@b.BowlerID">Edit</a></td>
            <td><a class="btn btn-warning" asp-action="DeleteBowler" asp-route-id="@b.BowlerID">Delete</a></td>
        </tr>
        }
    </tbody>
</table>

